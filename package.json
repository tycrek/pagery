{
	"name": "pagery",
	"version": "0.3.0",
	"description": "Static site generator",
	"main": "dist/pagery.js",
	"engines": {
		"node": ">=16.14.x",
		"npm": ">=8.17.x"
	},
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "rm -dr ./dist/ & tsc",
		"release": "np",
		"test": "npm run test:cli && npm run test:config",
		"test:cli": "npm run build && node ./dist/pagery.js --dir=test --data=meta.json,foo.json --exclude=head.pug,notme.pug --tailwindFile=tailwind.css",
		"test:config": "npm run build && node ./dist/pagery.js --config=test/pagery.config.json"
	},
	"bin": {
		"pagery": "dist/pagery.js"
	},
	"repository": "github:tycrek/pagery",
	"keywords": [
		"static",
		"site",
		"generator"
	],
	"author": "tycrek <t@tycrek.com> (https://tycrek.com/)",
	"license": "ISC",
	"bugs": "https://github.com/tycrek/pagery/issues",
	"homepage": "https://github.com/tycrek/pagery#readme",
	"devDependencies": {
		"@tsconfig/node16": "^1.0.4",
		"@types/fs-extra": "^11.0.1",
		"@types/node": "^18.11.18",
		"@types/pug": "^2.0.6",
		"typescript": "^4.9.4"
	},
	"dependencies": {
		"@tinycreek/postcss-font-magician": "^4.1.0",
		"autoprefixer": "^10.4.14",
		"cssnano": "^6.0.1",
		"fs-extra": "^11.1.1",
		"postcss": "^8.4.23",
		"pug": "^3.0.2",
		"tailwindcss": "^3.3.2"
	}
}
